{
  "expo": {
    "name": "Sonicbooks",
    "slug": "JBAudio",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/music-ring-icon.svg",
    "scheme": "sonicbooks",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fuzzylogic42.JBAudio"
    },
    "android": {
      "softwareKeyboardLayoutMode": "pan",
      "permissions": [
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/music-ring-icon.svg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.fuzzylogic42.JBAudio"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "@morrowdigital/watermelondb-expo-plugin",
        {
          "disableJsi": false
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.0.21",
            "packagingOptions": {
              "pickFirst": [
                "**/libc++_shared.so"
              ]
            }
          }
        }
      ],
      [
        "react-native-edge-to-edge",
        {
          "android": {
            "parentTheme": "Default",
            "enforceNavigationBarContrast": false
          }
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "contentFit": "contain",
          "backgroundColor": "#1C1C1C"
        }
      ],
      "expo-asset",
      "expo-build-properties",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "react-native",
          "organization": "studio-jas"
        }
      ],
      [
        "expo-font",
        {
          "android": {
            "fonts": [
              {
                "fontFamily": "Rubik",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/rubik_regular.ttf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/rubik_medium.ttf",
                    "weight": 500
                  },
                  {
                    "path": "./assets/fonts/rubik_semi_bold.ttf",
                    "weight": 600
                  }
                ]
              }
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "38e52e0e-72de-42a8-aa99-4451d81b3bdb"
      }
    }
  }
}